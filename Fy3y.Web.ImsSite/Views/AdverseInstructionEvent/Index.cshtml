
@using Fy3y.Model.Das
@model IList<Fy3y.Model.Das.AdverseInstructionEvent>
@{
  ViewBag.Title = "医疗器械不良事件清单";
  var eventType = ViewBag.eventType as EventType;
}
<br />
<div class="form-group row">
  <div class="col-2">
    <a class="btn btn-dark" href="@Url.Action("Create")">
      <i class="fa fa-plus">添加</i>
    </a>
  </div>
</div>
<div class="text-center">
  <table class="table table-sm table-bordered table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>上报时间</th>
        <th>上报科室</th>
        <th>事件后果</th>
        <th>报告人</th>
        <th>查看</th>
      </tr>
    </thead>
    <tbody>
      @if (Model?.Count() > 0)
    {
      var index = 0;
      foreach (var item in Model)
      {
        index++;
      <tr>
        <td>@index </td>
        <td>item.AdverseEvent.ReportTime </td>
        <td>@item.AdverseEvent.ReporterDeptName </td>
        <th>@item.EventResult</th>
        <td>@item.AdverseEvent.ReporterName </td>
        <td>
          <div>
            @if (item.AdverseEvent.IsChecked)
              {
            <a href="@Url.Action("Details",new{id=item.EventId})" title="详细">
              <i class="fa fa-search"></i>
            </a>
              }
              else
              {
            <a href="@Url.Action("Create",new{id=item.EventId})" title="编辑">
              <i class="fa fa-edit"></i>
            </a>
            <a href="javascript:void(0)" onclick="remove('@Url.Action("Delete",new{id=item.EventId})')" title="删除">
              <i class="fa fa-trash"></i>
            </a>
              }
          </div>
        </td>
      </tr>
      }
    }
    </tbody>
  </table>
</div>