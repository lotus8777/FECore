@model IList<MobilePayment>
@{
  ViewBag.Title = "移动支付清单";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm(null, null, FormMethod.Post))
{
<div class="form-row mb-2">
  <div class="col">
    @Html.TextBox("begin", null, new {onfocus = "WdatePicker({isShowClear:false,readOnly:true,isShowOK:false,minDate:'2018-02-01'})", @class = "form-control"})
  </div>
  <div class="col">
    @Html.TextBox("end", null, new {onfocus = "WdatePicker({isShowClear:false,readOnly:true,isShowOK:false,maxDate:'%y-%M-%d'})", @class = "form-control"})
  </div>
  <div class="col">
    <button class="btn btn-dark d-print-none">
      <span class="fa fa-search">查询</span>
    </button>
  </div>
  <div class="col">
  </div>
  <div class="col">
  </div>
  <div class="col">
  </div>
</div>
}
<table class="table table-sm table-bordered table-hover table-striped text-center">
  <thead>
    <tr>
      <th>#</th>
      <th>门诊号码</th>
      <th>姓名</th>
      <th>身份证号</th>
      <th>收费日期</th>
      <th>发票号码</th>
      <th>总计金额</th>
    </tr>
  </thead>
  <tbody>
    @{
    if (Model?.Any()??false)
    {
      var i = 0;
      foreach (var item in Model)
      {
        i++;
      <tr>
        <td>@i </td>
        <td>@item.Mzxh </td>
        <td>@item.Brxm </td>
        <td>@item.Sfzh </td>
        <td>@item.Sfrq </td>
        <td>@item.Fphm </td>
        <td>@item.Zjje </td>
      </tr>
      }
    }
    }
    <tr></tr>
  </tbody>
</table>