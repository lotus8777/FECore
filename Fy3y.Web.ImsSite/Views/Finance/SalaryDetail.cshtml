@model Fy3y.Model.Das.Salary
@{
    ViewData["Title"] = $"{Model.SalaryMonth.Substring(0,4)}年{Model.SalaryMonth.Substring(4,2)}月薪资明细单";

}

<style>
    .border {
        border: 2px solid black;
    }

    td.text-left {
        border-right: 1px solid black;
        border-left: 1px dashed black;
    }

    tr {
        border-bottom: 1px dotted black;
        border-left: 2px solid black;
    }
</style>

<div class="row form-group text-center">
    <div class="col">姓名:@Model.EmployeeName</div>
    <div class="col">日期:@Model.SalaryMonth</div>
    <div class="col">工龄:@Model.WorkAge</div>
</div>
<hr />
<table class="table table-striped table-bordered">
    <tr style="border-top:1px solid black;">
        <td class="text-center b-r" colspan="2">收入</td>
        <td class="text-center" colspan="2">支出</td>
    </tr>
    <tr >
        <td class="text-right">@Html.DisplayNameFor(p => p.RankWage)</td>
        <td class="text-left b-r">@Model.RankWage</td>
        <td class="text-right">@Html.DisplayNameFor(p => p.ProvidentFund)</td>
        <td class=" text-left">@Model.ProvidentFund</td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.PayWage)</td>
        <td class="text-left">@Model.PayWage</td>
        <td class="text-right">@Html.DisplayNameFor(p => p.EndowmentInsurance)</td>
        <td class="text-left">@Model.EndowmentInsurance</td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.FloatingWage)</td>
        <td class="text-left">@Model.FloatingWage</td>
        <td class="text-right">@Html.DisplayNameFor(p => p.OccupationalAnnuity)</td>
        <td class="text-left">@Model.OccupationalAnnuity</td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.TenPercentForNursing)</td>
        <td class="text-left">@Model.TenPercentForNursing</td>
        <td class="text-right">@Html.DisplayNameFor(p => p.MedicalInsurance)</td>
        <td class="text-left">@Model.MedicalInsurance</td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.NursingAgeSubsidy)</td>
        <td class="text-left">@Model.NursingAgeSubsidy</td>
        <td class="text-right">@Html.DisplayNameFor(p => p.UnemploymentInsurance)</td>
        <td class="text-left">@Model.UnemploymentInsurance</td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.LivingSubsidy)</td>
        <td class="text-left">@Model.LivingSubsidy</td>
        <td class="text-right">@Html.DisplayNameFor(p => p.IncomeTax)</td>
        <td class="text-left">@Model.IncomeTax</td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.PositionSubsidy)</td>
        <td class="text-left">@Model.PositionSubsidy</td>
        <td class="text-right">@Html.DisplayNameFor(p => p.DeductPay)</td>
        <td class="text-left">@Model.DeductPay</td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.WorkAgeSubsidy)</td>
        <td class="text-left">@Model.WorkAgeSubsidy</td>
        <td class="text-right"></td>
        <td class="text-left"></td>
    </tr>
    <tr>
        <td class="text-right">@Html.DisplayNameFor(p => p.HealthCareSubsidy)</td>
        <td class="text-left">@Model.HealthCareSubsidy</td>
        <td class="text-right"></td>
        <td class="text-left"></td>
    </tr>
    <tr style="border-bottom:1px solid black;">
        <td class="text-right">@Html.DisplayNameFor(p => p.BackPay)</td>
        <td class="text-left">@Model.BackPay</td>
        <td class="text-right"></td>
        <td class="text-left"></td>
    </tr>
    <tr style="border-bottom:1px solid black; font-size:1.4rem;font-weight:300;line-height:1.2;">
        <td class="text-right">总 @Html.DisplayNameFor(p => p.Income)</td>
        <td class="text-left">@Model.Income.ToString("F")</td>
        <td class="text-right">总 @Html.DisplayNameFor(p => p.Expend)</td>
        <td class="text-left">@Model.Expend.ToString("F")</td>
    </tr>
    <tr style="border-bottom:1px solid black; font-size:1.4rem;font-weight:300;line-height:1.2;">
        <td class="text-right" colspan="2">实发工资</td>
        <td class="text-left" colspan="2">@Model.Fsalary.ToString("F")</td>
    </tr>
</table>

@if (!string.IsNullOrEmpty(Model.Comments))
{
    <div>备注：@Model.Comments</div>

}

<div class="text-center">
    <a href="@Url.Action("Index")">返回</a>
</div>