@model IList<Fy3y.Model.Das.Purchase>
@{
  ViewBag.Title = "采购列表";
}
<div class="mb-1">
  <a class="btn btn-dark" href="@Url.Action("Create")">
    <i class="fa fa-plus">增加</i>
  </a>
</div>
<table class="table table-sm table-bordered text-center table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>申请人</th>
      <th>申请科室</th>
      <th>申请时间</th>
      <th>采购预算</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    @{
    foreach (var item in Model)
    {
      <tr>
        <td>@(Model.IndexOf(item) + 1) </td>
        <td>@item.CreatorName </td>
        <td>@item.DepartmentName </td>
        <td>@item.CreateTime.ToShortDateString() </td>
        <td>@item.Budget 元 </td>
        <td>
          <a href="@Url.Action("Detail",new{id=item.PurchaseId})">
            <i class="fa fa-eye"></i>
          </a>|
          <a href="javascript:void(0)" onclick="remove('@Url.Action("Delete",new{id=item.PurchaseId})')">
            <i class="fa fa-trash"></i>
          </a>
        </td>
      </tr>
    }
    }
  </tbody>
</table>