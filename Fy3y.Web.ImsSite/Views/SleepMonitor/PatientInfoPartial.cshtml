@model Fy3y.Model.Das.SleepMonitorRegistration
<!--患者基本资料-->
<div class="form-group row">
  <label class="col-2 col-form-label">预约来源</label>
  <div class="col-1 form-check form-check-inline">
    @Html.RadioButtonFor(m => m.Source, "门诊", new {@class = "form-check-input", id = "source1"})
    <label class="form-check-label" for="source1">门诊</label>
  </div>
  <div class="col-1 form-check form-check-inline">
    @Html.RadioButtonFor(m => m.Source, "住院", new {@class = "form-check-input", id = "source2"})
    <label class="form-check-label" for="source2">住院</label>
  </div>
  <div class="col-1 form-check form-check-inline">
    @Html.RadioButtonFor(m => m.Source, "电话", new {@class = "form-check-input", id = "source3"})
    <label class="form-check-label" for="source3">电话</label>
  </div>
  <div class="col-1 form-check form-check-inline">
    @Html.RadioButtonFor(m => m.Source, "其他", new {@class = "form-check-input", id = "source4"})
    <label class="form-check-label" for="source4">其他</label>
  </div>
</div>
<div class="form-group row">
  <label class="col-2 col-form-label">患者姓名</label>
  <div class="col-4">
    @Html.TextBoxFor(m => m.PatientName, new {@class = "form-control"})
  </div>
  <label class="col-2 col-form-label">患者年龄</label>
  <div class="col-4">
    @Html.TextBoxFor(m => m.PatientAge, new {@class = "form-control", placeholder = "岁"})
  </div>
</div>
<div class="form-group row">
  <label class="col-2 col-form-label">患者性别</label>
  <div class="col-1 form-check form-check-inline">
    @Html.RadioButtonFor(m => m.PatientSex, 1, new {@class = "form-check-input", id = "patientmale"})
    <label class="form-check-label" for="patientmale">男</label>
  </div>
  <div class="col-1 form-check form-check-inline">
    @Html.RadioButtonFor(m => m.PatientSex, 2, new {@class = "form-check-input", id = "patientfemale"})
    <label class="form-check-label" for="patientfemale">女</label>
  </div>
  <div class="col-1 form-check form-check-inline">
    @Html.RadioButtonFor(m => m.PatientSex, 3, new {@class = "form-check-input", id = "patientother"})
    <label class="form-check-label" for="patientother">其他</label>
  </div>
</div>
<div class="form-group row">
  <label class="col-2 col-form-label">联系方式</label>
  <div class="col-4">
    @Html.TextBoxFor(m => m.Contact, new {@class = "form-control"})
  </div>
</div>