@model IList<Fy3y.Model.Das.Employee>
<table class="table table-sm table-bordered table-hover table-striped text-center">
  <thead>
    <tr>
      <th>#</th>
      <th>姓名</th>
      <th>科室</th>
      <th>状态</th>
      <th>联系方式</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    @if (Model?.Count() > 0)
  {
    var i = 0;
    foreach (var item in Model)
    {
      i++;
    <tr>
      <td>@i </td>
      <td>@item.EmployeeName </td>
      <td>@item.Department.DepartmentName </td>
      <td>@(item.WorkStatus?.StatusName) </td>
      <td>@item.Mobile </td>
      <td>
        <a href="@Url.Action("Create",new {id=item.EmployeeId})">
          <span class="fa fa-edit"></span>
        </a>
        <a href="javascript:void(0)" onclick="remove('@Url.Action("Delete","Employee",new { id=item.EmployeeId})')">
          <i class="fa fa-remove"></i>
        </a>
      </td>
    </tr>
    }
  }
  </tbody>
</table>